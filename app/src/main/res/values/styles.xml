<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextView.Title" parent="TextView">
        <item name="android:textSize">@dimen/font_normal_16</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextView.Counter" parent="TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/spacing_tiny_4</item>
        <item name="android:paddingStart">@dimen/spacing_tiny_4</item>
        <item name="android:paddingEnd">@dimen/spacing_tiny_4</item>
        <item name="android:paddingRight">@dimen/spacing_tiny_4</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="TextView.Others" parent="TextView">
        <item name="android:textSize">@dimen/font_small_12</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>
